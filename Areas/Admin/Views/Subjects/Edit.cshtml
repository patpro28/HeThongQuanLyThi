@model HeThongQuanLyThi.Models.Subject
@{
    ViewData["Title"] = "Sửa môn học";
}
<h1 class="text-2xl font-semibold mb-4">Sửa môn học</h1>

<form asp-action="Edit" method="post" class="max-w-3xl bg-white rounded border p-4">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="Id" />
  <partial name="_Form" for="@Model" />
  <div class="mt-4 flex gap-2">
    <button class="rounded bg-indigo-600 px-4 py-2 text-white">Lưu</button>
    <a asp-action="Index" class="rounded border px-4 py-2 hover:bg-gray-50">Hủy</a>
  </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }