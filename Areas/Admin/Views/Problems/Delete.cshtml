@model HeThongQuanLyThi.Models.Problem
@{
    ViewData["Title"] = "Xoá bài tập";
}
<h1 class="text-2xl font-semibold mb-4">Xoá bài tập</h1>

<div class="bg-white rounded border p-4 mb-4">
    <div class="text-gray-500">Câu hỏi</div>
    <div>@Model.Content</div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="rounded bg-red-600 px-4 py-2 text-white">Xoá</button>
    <a asp-action="Index" class="ml-2 rounded border px-4 py-2 hover:bg-gray-50">Hủy</a>
</form>