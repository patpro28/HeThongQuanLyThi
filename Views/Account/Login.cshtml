@model HeThongQuanLyThi.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="login-page d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%; border-radius: 20px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold" style="color:#3d768e;">Đăng nhập</h2>
                <p class="text-muted">Vui lòng nhập thông tin tài khoản của bạn</p>
            </div>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserNameOrEmail" class="form-label fw-semibold">Tên đăng nhập hoặc Email</label>
                    <input asp-for="UserNameOrEmail" class="form-control form-control-lg rounded-3" autocomplete="username" placeholder="Nhập tên hoặc email..." />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Mật khẩu</label>
                    <input asp-for="Password" class="form-control form-control-lg rounded-3" type="password" autocomplete="current-password" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill fw-semibold">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                </button>

                <div class="text-center mt-4">
                    <span class="text-muted">Chưa có tài khoản?</span>
                    <a asp-controller="Account" asp-action="Register" class="fw-semibold text-decoration-none text-primary">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

