@{
    ViewData["Title"] = "Trang chủ";
}
<h1 class="mb-3">Trang chủ</h1>

@if (User?.Identity?.IsAuthenticated == true)
{
    <p>Xin chào <strong>@User.Identity.Name</strong>!</p>

    <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">Đăng xuất</button>
    </form>
}
else
{
    <p>Bạn chưa đăng nhập.</p>
    <div class="d-flex gap-2 mt-3">
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Đăng nhập</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-success">Đăng ký</a>
    </div>
}
